<PropertyList>

 <sim>

  <description>paraglider</description>
  <author>David Culp, Erik Hofman (FDM), Capt. Slug (3D)</author>
  <status>beta</status>
  <rating>
   <FDM type="int">4</FDM>
   <systems type="int">4</systems>
   <model type="int">2</model>
   <cockpit type="int">0</cockpit>
  </rating>
 
  <flight-model>jsb</flight-model>
  <aero>paraglider</aero>

  <presets>
<!--
   <uBody-fps>10</uBody-fps>
   <wBody-fps>8</wBody-fps>
   <trim type="bool">false</trim>
-->
   <onground type="bool">false</onground>
   <altitude-ft>3000</altitude-ft>
  </presets>

  <position>
    <altitude-agl-ft>5000</altitude-agl-ft>
  </position>

  <virtual-cockpit archive="y">true</virtual-cockpit>
  <panel>
   <visibility archive="y">false</visibility>
  </panel>

  <hud>
   <visibility type="bool">false</visibility>
  </hud>

  <model>
   <path>Aircraft/paraglider/Models/paraglider_model.xml</path>
  </model>

  <view>
   <internal archive="y">true</internal>
   <config>
     <x-offset-m archive="y">0.0</x-offset-m>
     <y-offset-m archive="y">0.05</y-offset-m>
     <z-offset-m archive="y">0.08</z-offset-m>
   </config>
  </view>

  <systems>
   <property-rule n="100">
    <name>animation</name>
    <path>Systems/Animation.xml</path>
   </property-rule>
  </systems>

  <help>
   <title>paraglider</title>
  </help>
 </sim>

 <keyboard>
  <key n="115">
   <name>s</name>
   <desc>Start/Stop the engine</desc>
   <binding>
    <command>property-toggle</command>
    <property>/controls/engines/engine/starter</property>
   </binding>
  </key>
  <key n="57">
   <name>PageUp</name>
   <desc>Increase throttle or autopilot autothrottle</desc>
   <binding>
    <command>property-assign</command>
    <property>/engines/engine/throttle</property>
    <value type="float">1.0</value>
   </binding>
  </key>
  <key n="51">
   <name>PageDown</name>
   <desc>Decrease throttle or autopilot autothrottle</desc>
   <binding>
    <command>property-assign</command>
    <property>/engines/engine/throttle</property>
    <value type="float">0.0</value>
   </binding>
  </key>
  <key n="360">
   <name>PageUp</name>
   <desc>Increase throttle or autopilot autothrottle</desc>
   <binding>
    <command>property-assign</command>
    <property>/engines/engine/throttle</property>
    <value type="float">1.0</value>
   </binding>
  </key>
  <key n="361">
   <name>PageDown</name>
   <desc>Decrease throttle or autopilot autothrottle</desc>
   <binding>
    <command>property-assign</command>
    <property>/engines/engine/throttle</property>
    <value type="float">0.0</value>
   </binding>
  </key>
 </keyboard>

 <controls>
  <engines>
   <engine>
    <throttle type="float">1.0</throttle>
    <magnetos>1</magnetos>
    <state>1</state>
   </engine>
  </engines>
 </controls>

</PropertyList>
